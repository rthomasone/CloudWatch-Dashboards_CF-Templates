{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CloudWatch Dashboard to visualize Network Flow Monitor resources.",
    "Transform": "AWS::LanguageExtensions",
    "Parameters": {
        "DefaultRegion": {
            "Description": "Select the default region hosting the load balancers to be monitored.",
            "Type": "String",
            "Default": "us-east-1"
        }
    },
    "Resources": {
        "CWDashboardALBAll": {
            "Type": "AWS::CloudWatch::Dashboard",
            "Properties": {
                "DashboardName": "ALB_All_Resources",
                "DashboardBody": {
                    "Fn::ToJsonString": {
                        "variables": [
                            {
                                "type": "pattern",
                                "pattern": "us-east-1",
                                "inputType": "select",
                                "id": "Region",
                                "label": "Region",
                                "defaultValue": {
                                    "Ref": "DefaultRegion"
                                },
                                "visible": true,
                                "values": [
                                    {
                                        "value": "us-east-1",
                                        "label": "N. Virginia"
                                    },
                                    {
                                        "value": "us-east-2",
                                        "label": "Ohio"
                                    },
                                    {
                                        "value": "us-west-1",
                                        "label": "N.California"
                                    },
                                    {
                                        "value": "us-west-2",
                                        "label": "Oregon"
                                    },
                                    {
                                        "value": "ap-east-1",
                                        "label": "Hong Kong"
                                    },
                                    {
                                        "value": "ap-south-1",
                                        "label": "Mumbai"
                                    },
                                    {
                                        "value": "ap-northeast-3",
                                        "label": "Osaka"
                                    },
                                    {
                                        "value": "ap-northeast-2",
                                        "label": "Seoul"
                                    },
                                    {
                                        "value": "ap-southeast-1",
                                        "label": "Singapore"
                                    },
                                    {
                                        "value": "ap-southeast-2",
                                        "label": "Sydney"
                                    },
                                    {
                                        "value": "ap-noutheast-1",
                                        "label": "Toyko"
                                    },
                                    {
                                        "value": "ca-central-1",
                                        "label": "Canada"
                                    },
                                    {
                                        "value": "eu-central-1",
                                        "label": "Frankfurt"
                                    },
                                    {
                                        "value": "eu-west-1",
                                        "label": "Ireland"
                                    },
                                    {
                                        "value": "eu-west-2",
                                        "label": "London"
                                    },
                                    {
                                        "value": "eu-west-3",
                                        "label": "Paris"
                                    },
                                    {
                                        "value": "eu-north-1",
                                        "label": "Stockholm"
                                    },
                                    {
                                        "value": "sa-east-1",
                                        "label": "South America"
                                    }
                                ],
                                "value": "us-east-1",
                                "customValues": "us-east-1, N. Virginia\nus-east-2, Ohio\nus-west-1, N.California\nca-central-1, Canada\nus-west-2, Oregon\neu-west-1, Ireland\neu-west-2, London\neu-central-1, Frankfurt"
                            }
                        ],
                        "widgets": [
                            {
                                "type": "metric",
                                "x": 6,
                                "y": 14,
                                "width": 18,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"RoundTripTime\"', 'Maximum', 60)),MAX, DESC)",
                                                "label": "${PROP('Dim.MonitorId')} MAX",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ],
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"RoundTripTime\"', 'Minimum', 60)),MIN, DESC)",
                                                "label": "${PROP('Dim.MonitorId')} MIN",
                                                "id": "e2",
                                                "region": "us-east-1"
                                            }
                                        ],
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"RoundTripTime\"', 'p90', 60)),MIN, DESC)",
                                                "label": "${PROP('Dim.MonitorId')} p90",
                                                "id": "e3",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "timeSeries",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "RoundTripTIme (Min)"
                                }
                            },
                            {
                                "type": "metric",
                                "x": 0,
                                "y": 14,
                                "width": 6,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"RoundTripTime\"', 'Maximum', 60)),MAX, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "singleValue",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "RoundTripTIme (Max)",
                                    "setPeriodToTimeRange": true,
                                    "sparkline": false
                                }
                            },
                            {
                                "type": "metric",
                                "x": 6,
                                "y": 21,
                                "width": 18,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"Retransmissions\"', 'Sum', 60)),SUM, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "timeSeries",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "Retransmissions"
                                }
                            },
                            {
                                "type": "metric",
                                "x": 0,
                                "y": 21,
                                "width": 6,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"Retransmissions\"', 'Sum', 60)),SUM, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "singleValue",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "Retransmissions",
                                    "setPeriodToTimeRange": true,
                                    "sparkline": false
                                }
                            },
                            {
                                "type": "metric",
                                "x": 6,
                                "y": 0,
                                "width": 18,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"HealthIndicator\"', 'Minimum', 60)),MIN, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "timeSeries",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "HealthIndicator (Min)"
                                }
                            },
                            {
                                "type": "metric",
                                "x": 0,
                                "y": 0,
                                "width": 6,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"HealthIndicator\"', 'Minimum', 60)),MIN, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "singleValue",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "HealthIndicator (Min)"
                                }
                            },
                            {
                                "type": "metric",
                                "x": 6,
                                "y": 7,
                                "width": 18,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"DataTransferred\"', 'Sum', 60)),SUM, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "timeSeries",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "DataTransferred (Sum)"
                                }
                            },
                            {
                                "type": "metric",
                                "x": 0,
                                "y": 7,
                                "width": 6,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"DataTransferred\"', 'Sum', 60)),SUM, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "singleValue",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "DataTransferred (Sum)",
                                    "setPeriodToTimeRange": true,
                                    "sparkline": false
                                }
                            },
                            {
                                "type": "metric",
                                "x": 6,
                                "y": 28,
                                "width": 18,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"Timeouts\"', 'Sum', 60)),SUM, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "timeSeries",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "Timeouts (Sum)"
                                }
                            },
                            {
                                "type": "metric",
                                "x": 0,
                                "y": 28,
                                "width": 6,
                                "height": 7,
                                "properties": {
                                    "metrics": [
                                        [
                                            {
                                                "expression": "SORT(REMOVE_EMPTY(SEARCH('{AWS/NetworkFlowMonitor,MonitorId} MetricName=\"Timeouts\"', 'Sum', 60)),SUM, DESC)",
                                                "label": "${PROP('Dim.MonitorId')}",
                                                "id": "e1",
                                                "region": "us-east-1"
                                            }
                                        ]
                                    ],
                                    "view": "singleValue",
                                    "stacked": false,
                                    "region": "us-east-1",
                                    "stat": "Average",
                                    "period": 300,
                                    "title": "Timeouts (Sum)",
                                    "setPeriodToTimeRange": true,
                                    "sparkline": false
                                }
                            }
                        ]
                    }
                }
            }
        }
    }
}